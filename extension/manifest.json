{
  "manifest_version": 3,
  "name": "LearnMate",
  "version": "1.0.1",
  "action": {
    "default_popup": "search.html",
    "default_icon": "static/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["/static/*"]
  }]
}